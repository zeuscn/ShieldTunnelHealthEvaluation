<Window x:Class="ShielTunnelHealthEvaluation.UI.Weight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:reoGrid="clr-namespace:unvell.ReoGrid;assembly=unvell.ReoGrid"
        Title="Weight" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <!--<DataGrid x:Name="dgWeight">
            </DataGrid>-->
            <reoGrid:ReoGridControl x:Name="reoWeigh" ></reoGrid:ReoGridControl>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Height="40">
            <Label>专家名称</Label>
            <TextBox x:Name="tbExpertName" Width="50"></TextBox>
            <Label>打分时间</Label>
            <DatePicker></DatePicker>
        </StackPanel>
        <Button x:Name="btnOK" Click="btnOK_Click" Grid.Row="2" Height="30" Width="50">OK</Button>
    </Grid>
</Window>
