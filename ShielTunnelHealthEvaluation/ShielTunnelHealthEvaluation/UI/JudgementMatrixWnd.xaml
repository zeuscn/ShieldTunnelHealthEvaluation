<Window x:Class="ShielTunnelHealthEvaluation.UI.JudgementMatrixWnd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:reoGrid="clr-namespace:unvell.ReoGrid;assembly=unvell.ReoGrid"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="1">
            <reoGrid:ReoGridControl x:Name="reoWeigh" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.IsSharedSizeScope="True"  ></reoGrid:ReoGridControl>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Height="40" HorizontalAlignment="Center">
            <Label>专家名称</Label>
            <TextBox x:Name="tbExpertName" Width="50"></TextBox>
            <Label>打分时间</Label>
            <DatePicker></DatePicker>
        </StackPanel>
        <Button x:Name="btnOK" Click="btnOK_Click" Grid.Row="2" Height="30" Width="50">Next</Button>
    </Grid>
</Window>
